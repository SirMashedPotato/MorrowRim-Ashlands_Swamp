<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>RimBees</li>
		</mods> 
				
		<match Class="PatchOperationSequence">
			<operations>
				
				<!-- add behive trees to ashlands -->
						
				<li Class="PatchOperationAdd"> 
					<xpath>/Defs/BiomeDef[defName = "MorrowRim_AshSwamp"]/wildPlants</xpath>
					<value>
						<RB_Plant_Hive_Arctic>0.01</RB_Plant_Hive_Arctic>
						<RB_Plant_Hive_Icy>0.01</RB_Plant_Hive_Icy>
						<RB_Plant_Hive_Swamp>0.02</RB_Plant_Hive_Swamp>
					</value>
				</li>

			</operations>
		</match>
	</Operation>
	
</Patch>

