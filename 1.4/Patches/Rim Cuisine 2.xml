<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>[1.0, 1.1] RimCuisine 2 Core</li>
		</mods> 
				
		<match Class="PatchOperationSequence">
			<operations>
				
				<!-- add mushrooms to ashlands -->
						
				<li Class="PatchOperationAdd"> 
					<xpath>/Defs/BiomeDef[defName="MorrowRim_AshSwamp"]/wildPlants</xpath>
					<value>
						<RC2_PlantMushroom>0.05</RC2_PlantMushroom> 
						<RC2_RawTruffles>0.01</RC2_RawTruffles> 
					</value>
				</li>

			</operations>
		</match>
	</Operation>
	
</Patch>

