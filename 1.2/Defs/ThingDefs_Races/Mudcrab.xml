<Defs>

	<!-- Mudcrab -->
	
	<ThingDef ParentName="BaseInsect">
		<defName>MorrowRim_Mudcrab</defName>
		<label>mudcrab</label>
		<description>A large crab often found around water, especially in swamps. While not particularly dangerous, unless someone mistakes it for a rock, mudcrab are often vectors for swamp fever, a sickness that drains strength.\n\nLike many ashland natives mudcrab are resistant to the effects of ash-storms.</description>
		<descriptionHyperlinks>
			<HediffDef>MorrowRim_SwampFever</HediffDef>
		</descriptionHyperlinks>
		<modExtensions>
			<li Class="MorrowRim.ExtendedRaceProperties">
                <ashResistant>Resistant</ashResistant>
            </li>
		</modExtensions>
		<statBases>
		  <MoveSpeed>2.8</MoveSpeed>
		  <ArmorRating_Blunt>0.08</ArmorRating_Blunt>
		  <ArmorRating_Sharp>0.08</ArmorRating_Sharp>
		  <ComfyTemperatureMin>0</ComfyTemperatureMin>
		  <MarketValue>100</MarketValue>
		  <LeatherAmount>0</LeatherAmount>
		</statBases>
		<uiIconScale>2</uiIconScale>
		<tools>
		  <li>
			<label>pincers</label>
			<capacities>
			  <li>Bite</li>
			  <li>MorrowRim_SwampBite</li>
			</capacities>
			<power>5</power>
			<cooldownTime>2</cooldownTime>
			<linkedBodyPartsGroup>Mouth</linkedBodyPartsGroup>
		  </li>
		  <li>
			<label>head</label>
			<capacities>
			  <li>Blunt</li>
			</capacities>
			<power>4</power>
			<cooldownTime>2</cooldownTime>
			<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
			<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
			<chanceFactor>0.1</chanceFactor>
		  </li>
		</tools>
		<comps>
			<li Class="CompProperties_EggLayer">
				<eggFertilizedDef>MorrowRim_Egg_MudcrabFertilized</eggFertilizedDef>
				<eggFertilizationCountMax>5</eggFertilizationCountMax>
				<eggLayIntervalDays>10</eggLayIntervalDays>
				<eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
				<eggCountRange>1~5</eggCountRange>
			</li>
		</comps>
		<race>
		  <body>MorrowRim_Crab</body>
		  <baseBodySize>0.4</baseBodySize>
		  <baseHungerRate>0.10</baseHungerRate>
		  <baseHealthScale>0.8</baseHealthScale>
		  <useMeatFrom>Megaspider</useMeatFrom>
		  <bloodDef>Filth_BloodInsect</bloodDef>
		  <wildness>0.95</wildness>
		  <lifeExpectancy>10</lifeExpectancy>
		  <foodType>OmnivoreRoughAnimal</foodType>
		  <manhunterOnDamageChance>0.02</manhunterOnDamageChance>
		  <manhunterOnTameFailChance>0.01</manhunterOnTameFailChance>
		  <trainability>None</trainability>
		  <lifeStageAges>
			<li>
			  <def>AnimalBaby</def>
			  <minAge>0</minAge>
			</li>
			<li>
			  <def>AnimalJuvenile</def>
